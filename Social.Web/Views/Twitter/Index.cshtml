
@{
    ViewBag.Title = "Twitter";
}
<br />
@if (ViewBag.CurrentUser == null)
{
    <div class="row">
        @using (Html.BeginForm("TwitterAuth", "Twitter"))
        {
            <input type="submit" value="Do Auth Twitter" />
        }
    </div>
}
else
{
    <div class="row">
        Welcome, @ViewBag.CurrentUser.Name <br />
        Access Token : @ViewBag.CurrentUser.Credentials.AccessToken
    </div>

    <div class="row">
        @using (Html.BeginForm("DoTwitter", "Twitter",FormMethod.Post, new {enctype= "multipart/form-data" }))
        {
            <div class="form-group">
                <label>Tweet </label>
                <input type="text" name="tweet" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="file" class="form-control"/>
            </div>
            <input type="submit" value="Publish Tweet"/>
        }
    </div>
}

